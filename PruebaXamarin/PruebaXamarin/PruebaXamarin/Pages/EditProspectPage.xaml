<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaXamarin.Pages.EditProspectPage"
             Title="Edit Prospect"
             BindingContext="{Binding Main, Source={StaticResource Locator}}">

    <ScrollView Padding="10">
        <StackLayout>
            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Name"/>
            <Entry Text="{Binding ProspectSeleted.Name, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" VerticalOptions="Center" Text="Surname"/>
            <Entry Text="{Binding ProspectSeleted.Surname, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Telephone"/>
            <Entry Text="{Binding ProspectSeleted.Telephone, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Prospect Identification"/>
            <Entry Text="{Binding ProspectSeleted.SchProspectIdentification, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Address"/>
            <Entry Text="{Binding ProspectSeleted.Address, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="CreatedAt"/>
            <DatePicker VerticalOptions="Center" Date="{Binding ProspectSeleted.CreatedAt}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="UpdatedAt"/>
            <DatePicker VerticalOptions="Center" Date="{Binding ProspectSeleted.UpdatedAt}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Status"/>
            <Entry Text="{Binding ProspectSeleted.StatusCd, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Zone Code"/>
            <Entry Text="{Binding ProspectSeleted.ZoneCode, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Neighborhood Code"/>
            <Entry Text="{Binding ProspectSeleted.NeighborhoodCode, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="City Code"/>
            <Entry Text="{Binding ProspectSeleted.CityCode, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Section Code"/>
            <Entry Text="{Binding ProspectSeleted.SectionCode, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Role Id"/>
            <Entry Text="{Binding ProspectSeleted.RoleId, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Appointable Id"/>
            <Entry Text="{Binding ProspectSeleted.AppointableId, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="RejectedObservation"/>
            <Entry Text="{Binding ProspectSeleted.RejectedObservation, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Observation"/>
            <Entry Text="{Binding ProspectSeleted.Observation, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Disable"/>
            <Switch HorizontalOptions="Start" IsToggled="{Binding ProspectSeleted.Disable}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Visited"/>
            <Switch HorizontalOptions="Start" IsToggled="{Binding ProspectSeleted.Visited}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Callcenter"/>
            <Switch HorizontalOptions="Start" IsToggled="{Binding ProspectSeleted.Callcenter}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="AcceptSearch"/>
            <Switch HorizontalOptions="Start" IsToggled="{Binding ProspectSeleted.AcceptSearch}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="Campaign Code"/>
            <Entry Text="{Binding ProspectSeleted.CampaignCode, Mode=TwoWay}"/>

            <Label FontSize="Medium" FontAttributes="Bold" TextColor="DarkBlue" Text="User Id"/>
            <Entry Text="{Binding ProspectSeleted.UserId, Mode=TwoWay}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>